---

import { Image } from 'astro:assets';
import noviceLogoWhite from "../../images/novice_logo_white.svg";

import { getAvtorsff } from '../../lib/avtor';
const avtors = await getAvtorsff();


const {menu_left,menu_right} = Astro.props;

let ml = menu_left.menuItems.nodes;
let mr = menu_right.menuItems.nodes;
---
<section class="bg-vrbsko-blue px-1 md:px-4 pt-24  pb-4" id="footer">
	<div class="mx-auto lg:max-w-screen-lg max-w-7xl 2xl:max-w-nov-width">
		<div class="grid grid-cols-1 md:grid-cols-3 justify-between justify-items-center pb-2 border-b border-black md:justify-items-stretch items-center">
            <div class="flex basis-1/3">
                <a class="" aria-label="Follow on Facebook" href="https://www.facebook.com/NoviceKoroska"><svg viewBox="0 0 17 24" aria-hidden="true" class="h-12 w-12 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300"><path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/></svg></a>
                <a class="" aria-label="Follow on Instagram" href="https://www.instagram.com/novice.at/"><svg viewBox="0 0 17 24" aria-hidden="true" class="h-12 w-12 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300"><path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599.28.28.453.546.598.92.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.47 2.47 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.478 2.478 0 0 1-.92-.598 2.48 2.48 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233 0-2.136.008-2.388.046-3.231.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92.28-.28.546-.453.92-.598.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045v.002zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92zm-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217zm0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334z"/></svg></a>
                <a class="" aria-label="Share on Whatsapp" href="https://whatsapp.com"><svg viewBox="0 0 17 24" aria-hidden="true" class="hidden h-12 w-12 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300"><path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/></svg></a>
            </div>
            <div class=" basis-1/3  flex justify-center">
                <a href="/" class="">
                    <Image width="243" src={noviceLogoWhite} alt="Novice logo white" loading="lazy"/>
                </a>
            </div>
            <div class=" basis-1/3 flex justify-end">
                <a href="#noviceat" aria-label="Back to top">
                    <svg viewBox="0 0 17 24" aria-hidden="true" class="h-16 w-16 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300">
                        <path fill-rule="evenodd" d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708l6-6z"/>
                    </svg>
                    
                </a>
            </div>
        </div>
        <div class="flex justify-between items-center  pb-8 pt-4">
            <p class="uppercase text-white mx-auto tracking-widedate text-center">Slovenski tednik za Koroško</p>
        </div>
	</div>
    <div class="mx-auto lg:max-w-screen-lg max-w-7xl 2xl:max-w-nov-width">
		<div class="flex flex-wrap justify-between py-8">
            <div class="flex flex-col basis-full md:basis-1/4 text-center md:text-left">
              
                {ml.map(function (menuitem,k) {
								
                    let title = menuitem.label;
                    let url = 'kategorije'+menuitem.uri;
                    
                    return (
                        <a href={url} class="block text-3xl ">{title}</a>
                    );
                    
                })}
                {mr.map(function (menuitem,k) {
                    
                    let title = menuitem.label;
                    let url = 'kategorije'+menuitem.uri;
                    
                    return (
                        <a href={url} class="block text-3xl ">{title}</a>
                    );
                    
                })}
            </div>
            <div class=" basis-full md:basis-1/4 my-8 md:my-0  text-center md:text-left">
                <div>
                    <h2 class="text-white text-2xl uppercase mb-4">Naslov</h2>
                    <p class="font-bold text-lg italic">NOVICE - Slomedia G.m.b.H</p>
                    <p class="font-bold text-lg italic">Fromillerstraße 29</p>
                    <p class="font-bold text-lg italic">A-9020 Klagenfurt/Celovec</p>
                    <p class="mt-4 text-lg font-bold"><a href="mailto:redakcija@novce.at">redakcija@novice.at</a></p>
                    <p><a class="text-3xl italic font-bold" href="tel:+43 463 218 880 0">+43 463 218 880 0</a></p>
                </div>
                <div>
                    <p class="font-bold italic mt-4 text-lg">Ilustracije</p>
                    <p>Mirko Malle & David Kassl</p>
                </div>
            </div>
            <div class="basis-1/2 md:basis-1/4">
                <h2 class="text-white text-2xl uppercase mb-4">Uredništvo</h2>
                
                {avtors.gv.map(function (avtor,k) {
								
                    let title = avtor.data.display_name;
                    ///  author/gustim
                    let url = "author/"+avtor.data.user_nicename;
                    
                    return (
                        
                        <a href={url} class="font-bold italic text-lg">
                            <div>{title}</div>
                            <span class="font-normal text-md">(glavni urednik)</span>
                        </a>
                    );
                    
                })}

                {avtors.zgv.map(function (avtor,k) {
                                                
                    let title = avtor.data.display_name;
                    let url = "author/"+avtor.data.user_nicename;
                    
                    return (
                        <a href={url} class="font-bold italic text-lg">
                            <div>{title}</div>
                            <span class="font-normal text-md">(namestnik glavnega urednika)</span>
                        </a>
                    );
                    
                })}

                {avtors.ur.map(function (avtor,k) {
                                       
                    let title = avtor.data.display_name;
                    let url = "author/"+avtor.data.user_nicename;
                    
                    return (
                        <a href={url} class="font-bold italic text-lg">
                            <div>{title}</div>
                        </a>
                    );
                    
                })}
                
            </div>
            <div class="basis-1/2 md:basis-1/4">
                <h2 class="text-white text-2xl uppercase mb-4">Naročnina</h2>
                <div>
                    
                    
                    
                    <a class="font-bold italic text-lg" href="mailto:uprava@novice.at">uprava@novice.at</a>
                    <span>
                        <span class="block">Letna naročnina:</span>
                        <span class="block">za Avstrijo in Slovenijo € 58,-</span>
                        <span class="block">za druge države: € 75.-</span>
                    </span>

                    <span class="bg-klopinj-blue inline-block text-sele-ivory uppercase px-1 sm:px-4 text-sm sm:text-base md:text-xl tracking-widels mt-4">
                        Naroči novice!
                    </span>
                    
                </div>
            </div>
        </div>
	</div>
    <div class="mx-auto lg:max-w-screen-lg max-w-7xl 2xl:max-w-nov-width ">
		<div class="flex flex-col md:flex-row  justify-between border-double border-t-4 border-black py-4">
            <div class="flex gap-2 font-bold italic uppercase py-4 md:py-0">
                <a href="/">Kolofon</a>
                <a href="/">Varstvo podatrkov</a>
                <a href="/">Piškoti</a>
            </div>
            <div>
                <p class=" font-bold italic">©2024 SLOMEDIA - Slovenski medijski center / Slowenisches Medienzentrum GmbH, Celovec/Klagenfurt</p>
            </div>
            
        </div>
	</div>
</div>
