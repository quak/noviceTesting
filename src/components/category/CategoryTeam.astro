---
import { getAvtors } from '../../lib/avtor';


const {block} = Astro.props;

const avtors = await getAvtors();

---



<section class=" px-1 md:px-4 py-12  ">
	<div class=" mx-auto  lg:max-w-screen-lg max-w-7xl 2xl:max-w-nov-width">
		
			<div class="flex flex-wrap justify-center">
				
				
				{avtors.map(function (avtor,k) {
					let url = '/author/'+avtor.data.user_nicename;
					
						return (
							<div class="flex flex-col basis-1/2 justfiy-center  px-2 py-4">
								<div class=" relative flex justify-center">
									<img class="mx-auto z-10 -mb-4 max-h-48" src={avtor.data.profileimage}/>
									<div class="mx-auto absolute w-60 h-60 border border-black bg-white rounded-full top-8"></div>
								</div>
								<div class="bg-white z-20 -mt-4 pt-4">
									<div class="px-6 flex flex-wrap flex-col justify-between h-full  border-t  ">
										<a class="flex gap-1 justify-center align-center text-klopinj-blue text-xl" href={url}>
											<h2 class="text-3xl text-center font-bold py-4 leading-novice">{avtor.data.display_name}</h2>
										</a>
										<p class="uppercase text-center text-xl tracking-widedate font-serif pb-4">{avtor.data.jobtitle}</p>
                        				<a class="flex gap-1 justify-center align-center text-klopinj-blue text-xl" href={`mailto:${avtor.data.user_email}`}><img src="/tmpimages/svgs/email.svg"/>{avtor.data.user_email}</a>
