            <img transition:name={sourceUrl} src={sourceUrl} alt={description}/>
        </a>
        
        <div class="border-b border-black flex flex-row justify-between py-2 items-center">

            <span class="font-serif italic"> <Fragment set:html={caption}/> </span>
